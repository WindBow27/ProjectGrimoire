<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="background1" stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graphic.TranslateScreenController">
   <center>
      <BorderPane prefHeight="660.0" prefWidth="1280.0" styleClass="root" stylesheets="@../css/common.css">
         <center>
            <HBox prefHeight="410.0" BorderPane.alignment="CENTER">
               <children>
                  <StackPane prefWidth="1000.0">
                     <children>
                          <TextArea fx:id="textArea" styleClass="text-area" stylesheets="@../css/common.css" StackPane.alignment="CENTER">
                              <font>
                                  <Font size="18.0" />
                              </font>
                          </TextArea>
                          <ImageView fitHeight="32.0" fitWidth="32.0" onMousePressed="#deleteWordInTextArea" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: -5; -fx-translate-y: 5;" StackPane.alignment="TOP_RIGHT">
                              <Image url="@../image/flower.png" />
                          </ImageView>
                          <ImageView fitHeight="33.0" fitWidth="42.0" onMousePressed="#playSoundLeft" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 5; -fx-translate-y: -5;" StackPane.alignment="BOTTOM_LEFT">
                              <Image url="@../image/sound.png" />
                          </ImageView>
                        <Button mnemonicParsing="false" onAction="#translateWordFromTextArea" style="-fx-translate-y: 55;" stylesheets="@../css/common.css" text="Translate" StackPane.alignment="BOTTOM_RIGHT" />
                     </children>
                     <padding>
                        <Insets bottom="135.0" left="100.0" />
                     </padding>
                  </StackPane>
                  <VBox alignment="CENTER" prefWidth="80.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Region prefHeight="200.0" prefWidth="50.0" />
                         <Label accessibleRole="BUTTON" alignment="CENTER" contentDisplay="CENTER" onMousePressed="#swapLanguage" prefHeight="80.0" prefWidth="120.0" style="-fx-font-size: 50;" styleClass="text-header" text="â‡„" VBox.vgrow="ALWAYS">
                             <font>
                                 <Font size="54.0" />
                             </font>
                         </Label>
                        <Region layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="50.0" />
                     </children>
                     <padding>
                        <Insets bottom="50.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </VBox>
                  <StackPane prefWidth="1000.0">
                     <children>
                          <Label fx:id="response" alignment="TOP_LEFT" prefHeight="1000.0" prefWidth="1000.0" stylesheets="@../css/common.css">
                              <font>
                                  <Font size="18.0" />
                              </font>
                          </Label>
                          <ImageView fitHeight="33.0" fitWidth="42.0" onMousePressed="#playSoundRight" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 5; -fx-translate-y: -5;" StackPane.alignment="BOTTOM_LEFT">
                              <Image url="@../image/sound.png" />
                          </ImageView>
                     </children>
                     <padding>
                        <Insets bottom="135.0" right="100.0" />
                     </padding>
                  </StackPane>
               </children>
            </HBox>
         </center>
         <top>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                   <Label alignment="CENTER" styleClass="text-header" stylesheets="@../css/common.css" text="Translator">
                     <VBox.margin>
                        <Insets top="100.0" />
                     </VBox.margin>
                  </Label>
                   <Label alignment="CENTER" styleClass="text-normal" stylesheets="@../css/common.css" text="Type your text and click Translate to see the translation">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Label>
                  <StackPane prefHeight="50.0" prefWidth="1080.0">
                     <children>
                          <Label fx:id="vi" style="-fx-translate-x: -10;" styleClass="text-normal" stylesheets="@../css/common.css" text="Vietnamese" StackPane.alignment="BOTTOM_RIGHT">
                              <font>
                                  <Font name="System Bold" size="15.0" />
                              </font>
                          </Label>
                          <Label fx:id="en" style="-fx-translate-x: 10;" styleClass="text-normal" stylesheets="@../css/common.css" text="English" StackPane.alignment="BOTTOM_LEFT">
                              <font>
                                  <Font name="System Bold" size="15.0" />
                              </font>
                          </Label>
                     </children>
                     <padding>
                        <Insets left="100.0" right="100.0" />
                     </padding>
                  </StackPane>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </center>
   <top>
      <StackPane prefHeight="60.0" BorderPane.alignment="CENTER">
         <children>
             <fx:include source="header-screen.fxml" />
         </children>
      </StackPane>
   </top>
</BorderPane>
