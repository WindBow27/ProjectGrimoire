<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="background3" stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graphic.InputScreenController">
   <center>
      <BorderPane>
         <bottom>
            <BorderPane />
         </bottom>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Region prefHeight="75.0" prefWidth="200.0" />
                  <StackPane prefHeight="180.0" prefWidth="1080.0">
                     <children>
                        <VBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" prefHeight="62.0" prefWidth="91.0" styleClass="text-header" stylesheets="@../css/common.css" text="Input" textAlignment="CENTER" />
                               <Label alignment="CENTER" prefHeight="50.0" prefWidth="354.0" styleClass="text-normal" text="Adding new words from text or txt file">
                                 <stylesheets>
                                    <URL value="@../css/common.css" />
                                 </stylesheets>
                               </Label>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </top>
         <center>
             <TextArea fx:id="textArea" prefHeight="360.0" prefWidth="940.0" styleClass="text-area" stylesheets="@../css/common.css" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets top="10.0" />
               </padding></TextArea>
         </center>
      </BorderPane>
   </center>
   <top>
      <StackPane prefHeight="60.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
         <children>
             <fx:include source="header-screen.fxml" />
         </children>
      </StackPane>
   </top>
   <left>
      <Region prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Region prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></Region>
   </right>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <VBox prefHeight="36.0" prefWidth="826.0">
               <children>
                  <Region prefHeight="20.0" prefWidth="1280.0" />
                   <Button fx:id="confirm" mnemonicParsing="false" onAction="#readWordFromTextArea" prefHeight="31.0" prefWidth="148.0" styleClass="button-input" stylesheets="@../css/common.css" text="Confirm" />
               </children>
            </VBox>
         </center>
         <left>
            <Region prefHeight="150.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </bottom>
</BorderPane>
