<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0" styleClass="background3"
            stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20"
            fx:controller="org.graphic.controller.GameScreenController">
    <top>
        <fx:include prefHeight="60.0" source="header-screen.fxml"/>
    </top>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <children>
                <ImageView fx:id="loading" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                           visible="false" StackPane.alignment="BOTTOM_RIGHT">
                    <StackPane.margin>
                        <Insets bottom="30.0" right="30.0"/>
                    </StackPane.margin>
                    <image>
                        <Image url="@../image/loading.gif"/>
                    </image>
                </ImageView>
                <HBox alignment="CENTER" spacing="100.0">
                    <children>
                        <Button fx:id="matching" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame"
                                prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css"
                                text="MATCHING">
                            <styleClass>
                                <String fx:value="matching-button"/>
                                <String fx:value="button"/>
                            </styleClass>
                            <padding>
                                <Insets bottom="-50.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="quiz" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame"
                                prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css" text="QUIZ">
                            <styleClass>
                                <String fx:value="quiz-button"/>
                                <String fx:value="button"/>
                            </styleClass>
                            <padding>
                                <Insets bottom="-50.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="wordle" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame"
                                prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css"
                                text="WORDLE">
                            <styleClass>
                                <String fx:value="button"/>
                                <String fx:value="wordle-button"/>
                            </styleClass>
                            <padding>
                                <Insets bottom="-50.0"/>
                            </padding>
                        </Button>
                    </children>
                    <StackPane.margin>
                        <Insets bottom="75.0"/>
                    </StackPane.margin>
                </HBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
