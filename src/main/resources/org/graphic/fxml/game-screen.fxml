<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="background4" stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graphic.GameScreenController">
    <top>
        <fx:include prefHeight="60.0" source="header-screen.fxml" />
    </top>
   <center>
      <HBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="matchingCard" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css" text="MATCHING">
               <styleClass>
                  <String fx:value="matching-button" />
                  <String fx:value="button" />
               </styleClass>
               <padding>
                  <Insets bottom="-50.0" />
               </padding>
            </Button>
            <Button fx:id="quiz" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css" text="QUIZ">
               <styleClass>
                  <String fx:value="quiz-button" />
                  <String fx:value="button" />
               </styleClass>
               <padding>
                  <Insets bottom="-50.0" />
               </padding>
            </Button>
            <Button fx:id="wordle" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#playGame" prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/game-button.css" text="WORDLE">
               <styleClass>
                  <String fx:value="button" />
                  <String fx:value="wordle-button" />
               </styleClass>
               <padding>
                  <Insets bottom="-50.0" />
               </padding>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="50.0" left="100.0" right="100.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
