<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="360.0" prefWidth="640.0" styleClass="background4" stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graphic.GameScreenController">
    <top>
        <fx:include prefHeight="60.0" source="header-screen.fxml" />
    </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <Button fx:id="matchingCard" mnemonicParsing="false" onAction="#playGame" onMouseEntered="#hovered" onMouseExited="#hovered" text="MATCHING CARD" BorderPane.alignment="CENTER" />
         </center>
         <left>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <right>
                  <Button fx:id="quiz" mnemonicParsing="false" onAction="#playGame" onMouseEntered="#hovered" onMouseExited="#hovered" text="QUIZ" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
         </left>
         <right>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <left>
                  <Button fx:id="wordle" mnemonicParsing="false" onAction="#playGame" onMouseEntered="#hovered" onMouseExited="#hovered" text="WORDLE" BorderPane.alignment="CENTER" />
               </left>
            </BorderPane>
         </right>
      </BorderPane>
   </center>
</BorderPane>
