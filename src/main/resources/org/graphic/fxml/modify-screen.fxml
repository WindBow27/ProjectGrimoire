<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="background3" stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.graphic.ModifyScreenController">
    <top>
        <StackPane prefHeight="60.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <children>
                <fx:include source="header-screen.fxml" />
            </children>
        </StackPane>
    </top>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" styleClass="text-header" stylesheets="@../css/common.css" text="Modify" textAlignment="CENTER" />
                        <Label alignment="CENTER" styleClass="text-normal" text="Modify your dictionary according to the instructions in the text box.">
                            <stylesheets>
                                <URL value="@../css/common.css" />
                            </stylesheets>
                            <VBox.margin>
                                <Insets bottom="50.0" top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="textArea" focusTraversable="false" prefHeight="2000.0" prefWidth="2000.0" promptText="Type your words and meanings seperated by spaces." styleClass="text-area" stylesheets="@../css/common.css">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <VBox.margin>
                                <Insets bottom="25.0" />
                            </VBox.margin>
                        </TextArea>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                            <children>
                                <Label fx:id="label" alignment="CENTER" prefHeight="48.0" prefWidth="372.0" styleClass="label-borderless" stylesheets="@../css/common.css">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin></Label>
                                <Button alignment="CENTER" mnemonicParsing="false" onAction="#addWord" prefHeight="35.0" prefWidth="150.0" styleClass="button-input" stylesheets="@../css/common.css" text="Add" />
                                <Button mnemonicParsing="false" onAction="#deleteWord" stylesheets="@../css/common.css" text="Delete" />
                                <Button layoutX="560.0" layoutY="10.0" mnemonicParsing="false" onAction="#updateWord" stylesheets="@../css/common.css" text="Update" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="30.0" left="100.0" right="100.0" top="100.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="75.0" />
            </padding>
        </StackPane>
    </center>
</BorderPane>
