<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0" styleClass="background4"
            stylesheets="@../css/background.css" xmlns="http://javafx.com/javafx/20"
            fx:controller="org.graphic.controller.WordleScreenController">
    <top>
        <StackPane prefHeight="60.0" BorderPane.alignment="CENTER">
            <children>
                <fx:include source="header-screen.fxml"/>
            </children>
        </StackPane>
    </top>
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <WebView fx:id="game" opacity="0.9" prefHeight="-1.0" prefWidth="-1.0" stylesheets="@../css/web.css"/>
                <Button fx:id="exit" mnemonicParsing="false" onMouseClicked="#exit" stylesheets="@../css/common.css"
                        text="Exit" StackPane.alignment="BOTTOM_LEFT">
                    <StackPane.margin>
                        <Insets left="50.0"/>
                    </StackPane.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="50.0"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
